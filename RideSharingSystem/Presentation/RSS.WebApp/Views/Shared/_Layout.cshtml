<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Together</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RSS.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid" style="background-color:#77C3EC">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">RideSharingSpot</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="dropdown float-left">
                    <button class="btn btn-danger dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Find Partner
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-area="" asp-controller="Request" asp-action="GetAllRequests">AllRequests</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Offer" asp-action="GetAllOffers">AllOffers</a></li>
                    </ul>
                </div>
                <div class="float-right">
                    <ul class="navbar-nav flex-grow-1">
                        
                        @if(User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Offer" asp-action="GetmyOffers"><span class="text-dark">My Offers</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Request" asp-action="GetmyRequests"><span class="text-dark">My Requests</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><span class="ml-2 btn btn-success text-light">Welcome @User.Identity.Name</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LogOut"><span class="ml-2 btn btn-danger text-light">LogOut</span></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ml-2">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LogIn"><span class="ml-2 btn btn-success text-light">LogIn</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="SignUp"><span class="btn btn-secondary text-light">Register</span></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2023 - RSS.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="text-decoration:none">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
